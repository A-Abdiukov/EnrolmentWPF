<Window
    x:Class="UI.Edit.EditCourse"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UI.Edit"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Edit course"
    IsVisibleChanged="Window_IsVisibleChanged"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    WindowStyle="ToolWindow"
    mc:Ignorable="d">
    <Grid>
        <Button
            Name="GoBack_navigation_btn"
            Width="25"
            Height="25"
            Margin="10,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="GoBack_navigation_btn_Click"
            Content="&lt;--" />
        <DataGrid
            Name="DgNavigationBar"
            Width="25"
            Margin="40,10,0,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            AutoGenerateColumns="False"
            ColumnHeaderHeight="0"
            FontSize="12"
            GridLinesVisibility="None"
            HeadersVisibility="None"
            PreparingCellForEdit="DgNavigationBar_NavigateToSelectedPage">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path='Title'}" Header="" />
            </DataGrid.Columns>
            <DataGrid.LayoutTransform>
                <TransformGroup>
                    <RotateTransform Angle="90" />
                    <MatrixTransform Matrix="-1,0,0,1,0,0" />
                </TransformGroup>
            </DataGrid.LayoutTransform>
            <DataGrid.ColumnHeaderStyle>
                <Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}" TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="LayoutTransform">
                        <Setter.Value>
                            <TransformGroup>
                                <RotateTransform Angle="-90" />
                                <ScaleTransform ScaleX="1" ScaleY="-1" />
                            </TransformGroup>
                        </Setter.Value>
                    </Setter>
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="LayoutTransform">
                        <Setter.Value>
                            <TransformGroup>
                                <RotateTransform Angle="-90" />
                                <ScaleTransform ScaleX="1" ScaleY="-1" />
                            </TransformGroup>
                        </Setter.Value>
                    </Setter>
                </Style>
            </DataGrid.CellStyle>
        </DataGrid>
        <StackPanel Margin="20,50,20,0" VerticalAlignment="Top">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition Width="0.3*" />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition MinHeight="50" />
                    <RowDefinition MinHeight="50" />
                    <RowDefinition MinHeight="50" />
                    <RowDefinition MinHeight="50" />
                    <RowDefinition MinHeight="50" />
                    <RowDefinition MinHeight="50" />
                    <RowDefinition MinHeight="50" />
                    <RowDefinition MinHeight="50" />
                    <RowDefinition MinHeight="50" />
                    <RowDefinition MinHeight="50" />
                </Grid.RowDefinitions>
                <Label
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Content="Select course you wish to edit" />
                <ComboBox
                    Name="ComboBoxSelectCourse"
                    Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    SelectedIndex="0"
                    SelectionChanged="ComboBoxSelectCourse_SelectionChanged" />

                <Label
                    Grid.Row="3"
                    Grid.Column="0"
                    Content="Course name" />
                <TextBox
                    Name="textBox_CourseName"
                    Grid.Row="3"
                    Grid.Column="1"
                    TextWrapping="Wrap" />

                <Label
                    Grid.Row="4"
                    Grid.Column="0"
                    Content="Location" />
                <ComboBox
                    x:Name="comboBox_Locations"
                    Grid.Row="4"
                    Grid.Column="1" />

                <Label
                    Grid.Row="5"
                    Grid.Column="0"
                    Content="Delivery" />
                <ComboBox
                    Name="comboBox_Delivery"
                    Grid.Row="5"
                    Grid.Column="1" />

                <Label
                    Grid.Row="6"
                    Grid.Column="0"
                    Content="Start semester" />
                <ComboBox
                    Name="comboBox_SemesterStart"
                    Grid.Row="6"
                    Grid.Column="1" />

                <Label
                    Grid.Row="7"
                    Grid.Column="0"
                    Content="End semester" />
                <ComboBox
                    x:Name="comboBox_SemesterEnd"
                    Grid.Row="7"
                    Grid.Column="1" />

                <Label
                    Grid.Row="3"
                    Grid.Column="3"
                    Content="Students" />
                <Button
                    Name="BtnSelectStudents"
                    Grid.Row="3"
                    Grid.Column="4"
                    Click="BtnSelectStudents_Click"
                    Content="Select students" />

                <Label
                    Grid.Row="4"
                    Grid.Column="3"
                    Content="Teachers" />
                <Button
                    Name="BtnSelectTeachers"
                    Grid.Row="4"
                    Grid.Column="4"
                    Click="BtnSelectTeachers_Click"
                    Content="Select teachers" />

                <Label
                    Grid.Row="5"
                    Grid.Column="3"
                    Content="Units" />
                <Button
                    Name="BtnSelectUnits"
                    Grid.Row="5"
                    Grid.Column="4"
                    Click="BtnSelectUnits_Click"
                    Content="Select units" />

                <Button
                    Name="BtnEditCourse"
                    Grid.Row="9"
                    Grid.Column="3"
                    Grid.ColumnSpan="2"
                    Click="BtnEditCourse_Click"
                    Content="Alter course details" />

            </Grid>
        </StackPanel>

    </Grid>
</Window>
